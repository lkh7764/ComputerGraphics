//////////////
// TYPEDEFS //
//////////////
struct PixelInputType
{
    float4 position : SV_POSITION;
    float4 color : COLOR;
};


////////////////////////////////////////////////////////////////////////////////
// Pixel Shader
// The pixel shader draws each pixel on the polygons that will be rendered to the 
// screen. Note that the pixel shader gets its input from the vertex shader output.
////////////////////////////////////////////////////////////////////////////////
float4 ColorPixelShader(PixelInputType input) : SV_TARGET
{
    return input.color;
}

float4 HalfColorPixelShader(PixelInputType input) : SV_TARGET
{
    input.color.x = input.color.x * 0.5f;
    input.color.y = input.color.y * 0.5f;
    input.color.z = input.color.z * 0.5f;
    input.color.w = input.color.w * 0.5f;
    return input.color;
}
